<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Status display area -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.7"
        android:text="Ready to Play"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#001C3B"
        android:gravity="center"
        android:padding="16dp"
        android:background="#D3E4FF"
        android:layout_marginBottom="16dp" />

    <!-- Playback control button row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/playButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Start\nPlayback"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="#26735E" />

        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Stop\nPlayback"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="#B01B2E"
            android:enabled="false" />

    </LinearLayout>

    <!-- Configuration Spinner with Label -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Playback Configuration"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1D1B20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¡ Long press to reload config"
                android:textSize="10sp"
                android:textColor="#444746" />

        </LinearLayout>

        <Spinner
            android:id="@+id/configSpinner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/btn_dropdown"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:spinnerMode="dropdown"
            android:popupBackground="#FFFFFF" />

    </LinearLayout>

    <!-- Information display area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.3"
        android:fillViewport="true"
        android:padding="2dp"
        android:background="#E0E2E0">

        <TextView
            android:id="@+id/playbackInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playback Information"
            android:textSize="14sp"
            android:textColor="#1D1B20"
            android:lineSpacingExtra="4dp"
            android:background="#FFFFFF"
            android:padding="16dp" />

    </ScrollView>

</LinearLayout>